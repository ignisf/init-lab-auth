<%= form_for(resource, as: resource_name, url: password_path(resource_name), builder: FancyFormBuilder, html: {method: :post, class: 'devise-form'}) do |f| %>
  <h2>Забравена парола?</h2>

  <%= f.email_field :email, autofocus: true %>

  <div><%= f.submit "Изпрати ми инструкции за промяна", class: 'button' %></div>

  <%= render "devise/shared/links" %>
<% end %>
